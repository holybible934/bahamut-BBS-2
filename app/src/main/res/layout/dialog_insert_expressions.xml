<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="@color/dialog_border_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_margin="3.0dp">
        <TextView
            android:id="@+id/dialog_insert_expressions_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewLarge"
            android:textColor="@color/white"
            android:background="@color/list_page_item_arrow_background"
            android:padding="2dp">
        </TextView>

        <Button
            android:id="@+id/dialog_insert_expressions_setting"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="@string/setting"
            android:background="@color/dialog_select_article_background_color_normal"
            android:layout_alignParentEnd="true" />
        <ScrollView
            android:id="@+id/dialog_insert_expressions_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_insert_expressions_title">
            <LinearLayout
                android:id="@+id/dialog_insert_expressions_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>