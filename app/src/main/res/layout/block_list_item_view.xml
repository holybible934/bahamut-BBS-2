<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/BlockListPage_ItemView_DividerTop"
        style="@style/ItemViewDividerHorizontal"
        android:visibility="gone" />

    <LinearLayout
        style="@style/baseTouchPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_page_item_content_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.kota.TelnetUI.TextView.TelnetTextViewLarge
            android:id="@+id/BlockListItemView_Name"
            style="@style/TextViewLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#ffffffff" />

        <View style="@style/ItemViewDividerVertical" />

        <Button
            android:id="@+id/BlockListItemView_Delete"
            style="@style/TouchBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_2"
            android:gravity="center"
            android:minWidth="100dp"
            android:text="@string/delete"
            android:textColor="@color/button_text_color_2"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:id="@+id/BlockListPage_ItemView_DividerBottom"
        style="@style/ItemViewDividerHorizontal" />
</LinearLayout>
