<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/TouchBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/titlebar_background_color"
        android:orientation="vertical">

        <com.kota.TelnetUI.TextView.TelnetTextViewNormal
            android:id="@+id/title"
            style="@style/TextViewNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@color/light_yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.kota.TelnetUI.TextView.TelnetTextViewSmall
                android:id="@+id/detail_1"
                style="@style/TextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white" />

            <com.kota.TelnetUI.TextView.TelnetTextViewSmall
                android:id="@+id/detail_2"
                style="@style/TextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#ffc0ffff" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/menu_divider"
        style="@style/ItemViewDividerVertical"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#ff101090"
        android:contentDescription="@string/zero_word"
        android:gravity="center"
        android:textColor="@color/list_page_item_arrow_color"
        android:visibility="gone"
        app:srcCompat="@drawable/menu_icon" />
</LinearLayout>
