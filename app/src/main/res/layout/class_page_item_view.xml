<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ClassPage_ItemView_BackgroundView"
            style="@style/TouchBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/list_page_item_content_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.kota.TelnetUI.TextView.TelnetTextViewNormal
                    android:id="@+id/ClassPage_ItemView_ClassTitle"
                    style="@style/TextViewNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.kota.TelnetUI.TextView.TelnetTextViewSmall
                    android:id="@+id/ClassPage_ItemView_ClassName"
                    style="@style/TextViewSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff0f080" />

                <com.kota.TelnetUI.TextView.TelnetTextViewSmall
                    android:id="@+id/ClassPage_ItemView_ClassManager"
                    style="@style/TextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingStart="12dp"
                    android:singleLine="true"
                    android:textColor="#ffb0b0f0" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/ItemViewDividerVertical" />

        <TextView
            android:id="@+id/ClassPage_ItemView_ArrowView"
            style="@style/TextViewSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/list_page_item_arrow_background"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingRight="6dp"
            android:text="@string/arrow_right"
            android:textColor="@color/list_page_item_arrow_color"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ClassPage_ItemView_OrderBock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/BoardPage_ItemView_MoveUp"
                style="@style/TouchBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrow_up"
                android:textSize="30sp" />

            <Button
                android:id="@+id/BoardPage_ItemView_MoveDown"
                style="@style/TouchBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrow_down"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/ClassPage_ItemView_DividerBottom"
        style="@style/ItemViewDividerHorizontal" />
</LinearLayout>
