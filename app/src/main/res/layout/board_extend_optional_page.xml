<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.kota.TelnetUI.TelnetHeaderItemView android:id="@+id/BoardExtendOptionalPage_HeaderView" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.kota.TelnetUI.TextView.TelnetTextViewUltraLarge android:textColor="#ffffffff" android:gravity="center" android:id="@+id/BoardExtendOptionalPage_ListEmptyView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/list_empty" style="@style/TextViewUltraLarge"/>
        <ListView android:id="@+id/BoardExtendOptionalPage_ListView" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null" android:dividerHeight="0dp"/>
    </FrameLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textColor="@color/tab_item_text_color_selected" android:id="@+id/BoardExtendOptionalPage_BookmarkButton" android:background="@drawable/tab_item_background_color_selected" android:text="@string/title" style="@style/TabItem"/>
        <View style="@style/ToolbarDivider"/>
        <Button android:textColor="@color/tab_item_text_color_unselected" android:id="@+id/BoardExtendOptionalPage_HistoryButton" android:background="@drawable/tab_item_background_color_unselected" android:text="@string/record" style="@style/TabItem"/>
        <View style="@style/ToolbarDivider"/>
        <Button android:enabled="false" android:textColor="@color/tab_item_text_color_unselected" android:id="@+id/BoardExtendOptionalPage_WaterBallButton" android:background="@drawable/tab_item_background_color_unselected" android:text="@string/zero_word" style="@style/TabItem"/>
    </LinearLayout>
</LinearLayout>
