<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:visibility="gone" android:id="@+id/SystemSettings_item_AutoConnectionRecover" style="@style/system_settings_item">
                <CheckBox android:id="@+id/SystemSettings_AutoConnectionRecover" style="@style/Checkbox_bahamut"/>
                <com.kota.TelnetUI.TextView.TelnetTextViewLarge android:text="@string/switch_connect_recovery" style="@style/SystemSettings_item_text"/>
            </RelativeLayout>
            <View android:visibility="gone" style="@style/HorizontalDivider"/>
            <RelativeLayout android:id="@+id/SystemSettings_item_BlockListEnable" style="@style/system_settings_item">
                <CheckBox android:id="@+id/SystemSettings_BlockListEnable" style="@style/Checkbox_bahamut"/>
                <com.kota.TelnetUI.TextView.TelnetTextViewLarge android:text="@string/switch_on_block_list" style="@style/SystemSettings_item_text"/>
            </RelativeLayout>
            <View style="@style/HorizontalDivider"/>
            <LinearLayout android:id="@+id/SystemSettings_BlockListSetting"
                android:clickable="true"
                style="@style/system_settings_item">
                <TextView android:textSize="24sp" android:textColor="@color/button_text_color" android:gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/block_list_setting" android:layout_weight="1" style="@style/TouchBlock"/>
                <View style="@style/ItemViewDividerVertical"/>
                <com.kota.TelnetUI.TextView.TelnetTextViewSmall android:textStyle="bold" android:textColor="@color/list_page_item_arrow_color" android:gravity="center" android:background="@color/list_page_item_arrow_background" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/arrow_right" style="@style/TextViewSmall"/>
            </LinearLayout>
            <View style="@style/HorizontalDivider"/>
            <RelativeLayout android:id="@+id/SystemSettings_item_AnimationEnable" style="@style/system_settings_item">
                <CheckBox android:id="@+id/SystemSettings_AnimationEnable" style="@style/Checkbox_bahamut"/>
                <com.kota.TelnetUI.TextView.TelnetTextViewLarge android:text="@string/enable_page_animation" style="@style/SystemSettings_item_text"/>
            </RelativeLayout>
            <View style="@style/HorizontalDivider"/>
            <RelativeLayout android:visibility="gone" android:id="@+id/SystemSettings_item_KeepWifi" style="@style/system_settings_item">
                <CheckBox android:id="@+id/SystemSettings_KeepWifi" style="@style/Checkbox_bahamut"/>
                <com.kota.TelnetUI.TextView.TelnetTextViewLarge android:text="@string/keep_wifi_on_sleep" style="@style/SystemSettings_item_text"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/SystemSettings_item_DisableArticleMove" style="@style/system_settings_item">
                <CheckBox android:id="@+id/SystemSettings_DisableArticleMove" style="@style/Checkbox_bahamut"/>
                <com.kota.TelnetUI.TextView.TelnetTextViewLarge android:text="@string/disable_aricle_move" style="@style/SystemSettings_item_text"/>
            </RelativeLayout>
        </LinearLayout>
