<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ArticleTextItemView_ContentView"
        style="@style/TouchBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.kota.TelnetUI.TextView.TelnetTextViewNormal
            android:id="@+id/ArticleTextItemView_Title"
            style="@style/TextViewNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.kota.TelnetUI.TextView.TelnetTextViewNormal
            android:id="@+id/ArticleTextItemView_Content"
            style="@style/TextViewNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="none|web|email" />
    </LinearLayout>

    <com.kota.TelnetUI.DividerView
        android:id="@+id/ArticleTextItemView_DividerView"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>
