<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kota.TelnetUI.TelnetHeaderItemView
        android:id="@+id/MailBox_HeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/MailBoxPage_ListViewBlock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.kota.TelnetUI.TextView.TelnetTextViewUltraLarge
            android:id="@+id/MailBoxPage_ListEmptyView"
            style="@style/TextViewUltraLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/loading_"
            android:textColor="#ffffffff"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/MailBoxPage_ListView"
            style="@style/List"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-1dp"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        style="@style/Toolbar">

        <Button
            android:id="@+id/Mail_BackButton"
            style="@style/ToolbarItem"
            android:text="@string/write_mail" />

        <View style="@style/ToolbarDivider" />

        <Button
            android:id="@+id/Mail_SearchButton"
            style="@style/ToolbarItem"
            android:text="@string/search" />

        <View style="@style/ToolbarDivider" />

        <Button
            android:id="@+id/Mail_PageUpButton"
            style="@style/ToolbarItem"
            android:text="@string/first_page" />

        <View style="@style/ToolbarDivider" />

        <Button
            android:id="@+id/Mail_PageDownButton"
            style="@style/ToolbarItem"
            android:text="@string/last_page" />
    </LinearLayout>
</LinearLayout>
