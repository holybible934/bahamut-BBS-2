<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SelectArticleItem_l">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_select_article_item_text_color</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@color/dialog_select_article_item_background_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
    <style name="SelectArticleItem_p">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_select_article_item_text_color</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@color/dialog_select_article_item_background_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
    <style name="TabItem">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="Toolbar">
        <item name="android:orientation">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ToolbarItem">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@color/toolbar_item_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ToolbarItemDark">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@color/toolbar_item_background_color_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="TouchBlock">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="baseTouchPart">
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
</resources>
