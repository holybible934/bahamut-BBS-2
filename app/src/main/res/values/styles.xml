<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="baseTouchPart">
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
    <style name="Title_bar">
        <item name="android:background">@color/title_bar_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Toolbar" parent="baseTouchPart">
        <item name="android:orientation">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ToolbarDivider">
        <item name="android:background">@color/toolbar_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="ToolbarItem" parent="baseTouchPart">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/toolbar_item_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="Block">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="BlockDividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
    </style>
    <style name="Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="DialogSelectArticleHorizontalDivider">
        <item name="android:background">@color/dialog_select_article_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:minHeight">1px</item>
    </style>
    <style name="DialogSelectArticleVerticalDivider">
        <item name="android:background">@color/dialog_select_article_divider_color</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">1px</item>
    </style>
    <style name="DialogToolbarItem" parent="baseTouchPart">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/dialog_item_background_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Dialog_NoTitle_FullScreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Dialog_Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="EditTextSingleLine" parent="TextViewUltraLarge">
        <item name="android:textColor">@color/edit_text_text_color</item>
        <item name="android:background">@color/edit_text_background_color</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:imeOptions">actionUnspecified</item>
    </style>
    <style name="ExtToolbar">
        <item name="android:orientation">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ExtToolbarItem">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ext_toolbar_item_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="HorizontalDivider">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:minHeight">1px</item>
    </style>
    <style name="ItemViewDividerHorizontal">
        <item name="android:background">@color/list_page_item_horizontal_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:minHeight">1px</item>
    </style>
    <style name="ItemViewDividerVertical">
        <item name="android:background">@color/list_page_item_vertical_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">1px</item>
    </style>
    <style name="List">
        <item name="android:listSelector">@android:drawable/list_selector_background</item>
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="ListDialogItem">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:buttonTint">@color/button_checkbox</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="MainItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MainItem2">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MainItemBackground">
        <item name="android:background">@color/item_background_color</item>
    </style>
    <style name="MenuItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MyTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">@android:color/tab_indicator_text</item>
    </style>
    <style name="TextViewNormal">
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextViewLarge" parent="TextViewNormal">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextViewSmall" parent="TextViewNormal">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextViewUltraLarge" parent="TextViewNormal">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="TouchBlock">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>
    <style name="VerticalDivider">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">1px</item>
    </style>
    <style name="SelectArticleItem_l" parent="baseTouchPart">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_select_article_item_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_select_article_item_background_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">70dp</item>
    </style>
    <style name="SelectArticleItem_p" parent="baseTouchPart">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_select_article_item_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_select_article_item_background_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">90dp</item>
    </style>
    <style name="TabItem">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="system_settings_item" parent="baseTouchPart">
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Checkbox_bahamut" parent="baseTouchPart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:buttonTint">@color/button_checkbox</item>
    </style>
    <style name="SystemSettings_checkbox_text" parent="TextViewLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SystemSettings_checkbox" parent="baseTouchPart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:buttonTint">@color/button_checkbox</item>
    </style>
    <style name="SystemSettings_spinner_text" parent="TextViewLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SystemSettings_spinner_item" parent="spinner_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="SystemSettings_directory_text" parent="TextViewLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="SystemSettings_directory_arrow" parent="TextViewSmall">
        <item name="android:textColor">@color/list_page_item_arrow_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/list_page_item_arrow_background</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/arrow_right</item>
    </style>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:backgroundTint">@color/checkbox_unchecked_color</item>
    </style>
    <style name="RightMenuItem" parent="@style/baseTouchPart">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/toolbar_item_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="BillingPage_button" parent="baseTouchPart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/button_rounded_background_2</item>
    </style>
</resources>