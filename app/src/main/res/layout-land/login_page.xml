<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/Login_MainFrame" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.kota.TelnetUI.TelnetView android:id="@+id/Login_TelnetView" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:id="@+id/toolbar" android:layout_alignParentBottom="true" style="@style/Toolbar">
        <RelativeLayout android:background="@color/toolbar_item_background_color" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <com.kota.TelnetUI.TextView.TelnetTextViewLarge android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:text="@string/save_data" android:singleLine="true" android:layout_centerVertical="true" style="@style/TextViewLarge"/>
            <CheckBox android:id="@+id/Login_LoginRememberCheckBox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" style="@style/CheckBox"/>
        </RelativeLayout>
        <View style="@style/ToolbarDivider"/>
        <Button android:id="@+id/Login_LoginButton" android:text="@string/login" android:layout_weight="2" style="@style/ToolbarItem"/>
    </LinearLayout>
    <RelativeLayout android:background="@color/item_background_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/toolbar">
        <LinearLayout android:orientation="horizontal" android:id="@+id/Login_InputBlock" android:background="#e0000000" android:paddingLeft="0px" android:paddingRight="0px" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_alignParentBottom="true" style="@style/TouchBlock">
            <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="54dp" android:layout_weight="1" style="@style/TouchBlock">
                <com.kota.TelnetUI.TextView.TelnetTextViewUltraLarge android:id="@+id/Login_UsernameLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="@string/account" style="@style/TextViewUltraLarge"/>
                <EditText android:id="@+id/Login_UsernameEdit" android:singleLine="true" android:maxLength="12" android:digits="@string/account_digits" android:inputType="text" style="@style/EditTextSingleLineLight"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="54dp" android:layout_weight="1" style="@style/TouchBlock">
                <com.kota.TelnetUI.TextView.TelnetTextViewUltraLarge android:id="@+id/Login_PasswordLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="@string/password" style="@style/TextViewUltraLarge"/>
                <EditText android:id="@+id/Login_PasswordEdit" android:password="true" android:singleLine="true" style="@style/EditTextSingleLineLight"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
