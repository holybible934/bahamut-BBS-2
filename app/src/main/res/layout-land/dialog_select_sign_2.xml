                                <Button android:id="@+id/Bahamut_Dialog_Select_Button_9_p" android:text="@string/number_9" style="@style/SelectArticleItem_p"/>
                            </LinearLayout>
                            <View style="@style/DialogSelectArticleHorizontalDivider"/>
